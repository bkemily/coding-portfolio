<!-- File: res/layout-land/activity_game.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <GridLayout
        android:id="@+id/game_grid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="16dp">

        <!-- Add buttons for the grid -->
        <Button
            android:id="@+id/button1"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button2"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button3"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button4"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button5"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button6"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button7"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button8"
            style="@style/gameButtonLand" />
        <Button
            android:id="@+id/button9"
            style="@style/gameButtonLand" />
    </GridLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/turn_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player X's turn, place an X"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/new_game_button"
            style="@style/GameOptionButton"
            android:layout_marginTop="20dp"
            android:text="@string/new_game"
            android:background="@color/banner_color"
            android:textColor="@color/white"
            android:onClick="onNewGameClick" />
    </LinearLayout>
</LinearLayout>
